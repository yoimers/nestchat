// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  name         String   @unique
  hashpassword String
  joinRoom     Room[]
  sendChat     Chat[]
  isInvited    Invite[] @relation("isInvited")
  invite       Invite[] @relation("invite")
  createdAt    DateTime @default(now())
}

model Invite {
  id          String @id @default(uuid())
  isInvited   User   @relation("isInvited", fields: [isInvitedId], references: [id])
  isInvitedId String
  invite      User   @relation("invite", fields: [inviteId], references: [id])
  inviteId    String
}

model Chat {
  id        String   @id @default(uuid())
  content   String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  room      Room     @relation(fields: [roomId], references: [id])
  roomId    String
  createdAt DateTime @default(now())
}

model Room {
  id        String   @id @default(uuid())
  name      String
  joinUsers User[]
  sendChats Chat[]
  createdAt DateTime @default(now())
}
